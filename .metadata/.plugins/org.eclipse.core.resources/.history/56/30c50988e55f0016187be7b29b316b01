public class Add {
  
    public integer avalue
    {
        set;
        get;
    }
    public integer bvalue
    {
        set;
        get;
    }
    public integer result
    {
        set;
        get;
    }
    public String operation
    {
        set;
        get;
    }
    
    public pageReference add()
    {
        result = avalue + bvalue;
        operation ='ADDITION';
        return null;
   }
    
}